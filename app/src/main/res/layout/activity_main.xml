<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#275DAD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="596dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Grades Calculator"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginBottom="40dp"
        android:background="#F8333C"
        android:text="Calculate"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonclear"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginBottom="44dp"
        android:background="#F8333C"
        android:text="Clear"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Mathinput"
        android:layout_width="283dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/math_grade"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mapeh" />

    <EditText
        android:id="@+id/AralPan"
        android:layout_width="283dp"
        android:layout_height="51dp"
        android:textColor="@color/black"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/aral_pan_grade"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Science" />

    <EditText
        android:id="@+id/Mapeh"
        android:layout_width="283dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"

        android:ems="10"
        android:hint="@string/mapeh_grade"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnglishInput" />

    <EditText
        android:id="@+id/Science"
        android:layout_width="283dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/black"

        android:ems="10"
        android:hint="@string/science_grade"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mathinput" />

    <EditText
        android:id="@+id/EnglishInput"
        android:layout_width="283dp"
        android:layout_height="51dp"
        android:layout_marginTop="59dp"
        android:textColor="@color/black"
        android:ems="10"
        android:hint="@string/english_grade"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grades" />

</androidx.constraintlayout.widget.ConstraintLayout>